{
  "manifest_version": 3,
  "name": "DOM3D",
  "version": "0.1",
  "description": "View the DOM in 3D.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "assets/style.css"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "48": "assets/dom3d-48.png",
      "96": "assets/dom3d-96.png"
    }
  }
}